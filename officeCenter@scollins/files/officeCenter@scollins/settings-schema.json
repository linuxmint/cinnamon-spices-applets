{
    "general": {
        "type": "header",
        "description": "General Settings"
    },
    
    "panelIcon": {
        "type": "iconfilechooser",
        "description": "Panel icon",
        "default": "applications-office",
        "tooltip": "Accepts icon name or direct path (supports symbolic icons)"
    },
    
    "panelText": {
        "type": "entry",
        "description": "Panel text",
        "default": ""
    },
    
    "keyOpen": {
        "type": "keybinding",
        "description": "Menu shorcut key",
        "default": "<Super>o"
    },
    
    "iconSize": {
        "type": "spinbutton",
        "default": 20,
        "min": 10,
        "max": 50,
        "units": "px",
        "step": 2,
        "description": "Icon size"
    },
    
    "documents": {
        "type": "header",
        "description": "Documents"
    },
    
    "showDocuments": {
        "type": "checkbox",
        "description": "Show contents of documents folder",
        "default": true
    },
    
    "recurseDocuments": {
        "type": "checkbox",
        "description": "Include subfolders",
        "default": true,
        "indent": true,
        "dependency": "showDocuments"
    },
    
    "altDir": {
        "type": "filechooser",
        "description": "Use alternate directory",
        "default": "",
        "select-dir": true,
        "indent": true,
        "dependency": "showDocuments"
    },
    
    "recent": {
        "type": "header",
        "description": "Recent Documents"
    },
    
    "showRecentDocuments": {
        "type": "checkbox",
        "description": "Show recent documents",
        "default": false
    },
    
    "recentSizeLimit": {
        "type": "spinbutton",
        "default": 10,
        "min": 0,
        "max": 30,
        "units": "",
        "step": 1,
        "description": "Number to show",
        "indent": true,
        "dependency": "showRecentDocuments"
    }
}