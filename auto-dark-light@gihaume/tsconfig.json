{
    "compilerOptions": {
        "target": "es2022",
        "lib": [
            "ES2022",
            "DOM" // For `console` in JS tests
        ],
        "module": "es2022",
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "allowJs": true,
        "checkJs":true,
        "strict": true,
		"types": [
			"@ci-types/cjs"
		]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ]
}
