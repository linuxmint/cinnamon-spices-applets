    "tooltip": "Enable Hover peek when mouse is over thumbnail"
 },
 "hover-peek-time" : {
    "type": "spinbutton",
    "default" : 50,
    "min" : 0,
    "max" : 1000,
    "step" : 5,
    "units" : "milliseconds",
