    "general_settings": {
      "type": "section",
      "title": "General settings",
      "keys": [
        "frequency",
        "graph_line_mode"
      ]
    },
    "theme_settings": {
      "type": "section",
      "title": "Theme (graph)",
      "keys": [
        "theme",
        "border_color",
        "background_color1",
        "background_color2",
        "label_color",
        "label_size",
        "detail_label_color",
        "detail_label_size"
      ]
    },
    "theme_data_settings": {
      "type": "section",
      "title": "Theme (graph data)",
      "keys": [
        "theme_data",
        "graph_color1",
        "graph_color2",
        "graph_offset2",
        "graph_color3",
        "graph_offset3",
        "graph_color4"
      ]
    },
    "CPU_settings": {
      "type": "section",
      "title": "CPU settings",
      "keys": [
        "cpu_enable_graph",
        "cpu_size",
