{
    "layout": {
        "type": "layout",
        "pages": [
            "page_general",
            "page_light_mode",
            "page_dark_mode"
        ],
        "page_general": {
            "type": "page",
            "title": "General",
            "sections": [
                "section_general"
            ]
        },
        "page_light_mode": {
            "type": "page",
            "title": "Light Mode",
            "sections": [
                "section_light_mode"
            ]
        },
        "page_dark_mode": {
            "type": "page",
            "title": "Dark Mode",
            "sections": [
                "section_dark_mode"
            ]
        },
        "section_general": {
            "type": "section",
            "title": "",
            "keys": [
                "enable_dark_mode"
            ]
        },
        "section_light_mode": {
            "type": "section",
            "title": "",
            "keys": [
                "light_win_border_theme",
                "light_gtk_theme",
                "light_cinnamon_theme",
                "light_icon_theme"
            ]
        },
        "section_dark_mode": {
            "type": "section",
            "title": "",
            "keys": [
                "dark_win_border_theme",
                "dark_gtk_theme",
                "dark_cinnamon_theme",
                "dark_icon_theme"
            ]
        }
    },
    "enable_dark_mode": {
        "type": "switch",
        "description": "Dark mode",
        "default": false
    },
    "light_gtk_theme": {
        "type": "combobox",
        "default": "none",
        "options": {},
        "description": "Select window control theme"
    },
    "dark_gtk_theme": {
        "type": "combobox",
        "default": "none",
        "options": {},
        "description": "Select window control theme"
    },
    "light_win_border_theme": {
        "type": "combobox",
        "default": "none",
        "options": {},
        "description": "Select window border theme"
    },
    "dark_win_border_theme": {
        "type": "combobox",
        "default": "none",
        "options": {},
        "description": "Select window border theme"
    },
    "light_cinnamon_theme": {
        "type": "combobox",
        "default": "none",
        "options": {},
        "description": "Select desktop theme"
    },
    "dark_cinnamon_theme": {
        "type": "combobox",
        "default": "none",
        "options": {},
        "description": "Select desktop theme"
    },
    "light_icon_theme": {
        "type": "combobox",
        "default": "none",
        "options": {},
        "description": "Select icon theme"
    },
    "dark_icon_theme": {
        "type": "combobox",
        "default": "none",
        "options": {},
        "description": "Select icon theme"
    }
}
