{
	"layout": {
		"type": "layout",
		"pages": [
			"general-page",
			"style-page",
			"effects-page"
		],
		"general-page": {
			"type": "page",
			"title": "General",
			"sections": [
				"general-section",
				"optimization-section"
			]
		},
		"style-page": {
			"type": "page",
			"title": "Style",
			"sections": [
				"styles-section",
				"colors-section"
			]
		},
		"effects-page": {
			"type": "page",
			"title": "Effects",
			"sections": [
				"general-effects-section"
			]
		},
		"general-section": {
			"type": "section",
			"title": "General",
			"keys": [
				"tooltip-message",
				"mode",
				"deactivate-on-fullscreen",
				"optimization-mode"
			]
		},
		"optimization-section": {
			"type": "section",
			"dependency": "optimization-mode=manual",
			"title": "Optimizations",
			"keys": [
				"repaint-interval",
				"repaint-angle"
			]
		},
		"styles-section": {
			"type": "section",
			"title": "Style",
			"keys": [
				"mode",
				"line-width",
				"padding",
				"margin",
				"use-alternative-colors"
			]
		},
		"colors-section": {
			"type": "section",
			"title": "Colors",
			"dependency": "use-alternative-colors=true",
			"keys": [
				"base-color",
				"iris-color",
				"pupil-color",
				"fill-lids-color-painting",
				"fill-bulb-color-painting"
			]
		},
		"general-effects-section": {
			"type": "section",
			"title": "General",
			"keys": [
				"blink-effect-enabled",
				"blink-period",
				"blink-gap",
				"idle-delay"
			]
		}
	},
	"mode": {
		"type": "combobox",
		"default": "lids",
		"description": "Eye Mode",
		"options": {
			"Lids": "lids",
			"Bulb": "bulb"
		}
	},
	"tooltip-message": {
		"type": "entry",
		"default": "Hey, I saw that!",
		"description": "Tooltip Message on Hover"
	},
	"deactivate-on-fullscreen": {
		"type": "checkbox",
		"default": true,
		"description": "Deactivate On Fullscreen"
	},
	"optimization-mode": {
		"type": "combobox",
		"default": "balance",
		"description": "Optimization Mode",
		"options": {
			"Battery": "battery",
			"Balanced": "balance",
			"Performance": "performance",
			"Manual": "manual"
		}
	},
	"repaint-interval": {
		"type": "spinbutton",
		"default": 55,
		"min": 5,
		"max": 200,
		"step": 5,
		"units": "ms",
		"description": "Eye Update Interval",
		"tooltip": "This setting controls the time to redraw the eye again. Lower values (measured in miliseconds) result in smoother animation but require more processing power."
	},
	"repaint-angle": {
		"type": "spinbutton",
		"default": 0.05,
		"min": 0,
		"max": 1,
		"step": 0.05,
		"units": "radians",
		"description": "Eye Update Sensitivity",
		"tooltip": "This setting controls the minimum angle change between mouse movements required to redraw the eye. Lower values (measured in radians) result in smoother animation but require more processing power."
	},
	"line-width": {
		"type": "spinbutton",
		"description": "Line Width",
		"default": 2.5,
		"min": 1,
		"max": 5,
		"step": 0.5,
		"units": "px"
	},
	"margin": {
		"type": "spinbutton",
		"default": 8.0,
		"min": -16.0,
		"max": 32.0,
		"step": 0.5,
		"units": "px",
		"description": "Margin"
	},
	"padding": {
		"type": "spinbutton",
		"default": 4.0,
		"min": 0,
		"max": 32,
		"step": 2,
		"units": "px",
		"description": "Padding"
	},
	"use-alternative-colors": {
		"type": "switch",
		"default": true,
		"description": "Use Alternative Colors for the Eye",
		"tooltip": "When disabled it will use the current system theme's default color for panel items."
	},
	"base-color": {
		"type": "colorchooser",
		"default": "#BBBBBB",
		"description": "Base Color"
	},
	"iris-color": {
		"type": "colorchooser",
		"default": "#634E34",
		"description": "Iris Color"
	},
	"pupil-color": {
		"type": "colorchooser",
		"default": "#130F0A",
		"description": "Pupil Color"
	},
	"fill-lids-color-painting": {
		"dependency": "mode=lids",
		"type": "checkbox",
		"default": true,
		"description": "Fill the Colors Inside the Eye"
	},
	"fill-bulb-color-painting": {
		"dependency": "mode=bulb",
		"type": "checkbox",
		"default": true,
		"description": "Fill the Colors Inside the Eye"
	},
	"blink-effect-enabled": {
		"type": "checkbox",
		"default": true,
		"description": "Blink Effect"
	},
	"blink-period": {
		"type": "spinbutton",
		"dependency": "blink-effect-enabled",
		"default": 600,
		"min": 200,
		"max": 5000,
		"step": 100,
		"units": "ms",
		"description": "Blink Period",
		"tooltip": "This setting controls the duration of a full blink cycle (closing and opening). Measured in milliseconds."
	},
	"blink-gap": {
		"type": "spinbutton",
		"dependency": "blink-effect-enabled",
		"default": 8000,
		"min": 1000,
		"max": 20000,
		"step": 500,
		"units": "ms",
		"description": "Blink Gap",
		"tooltip": "This setting controls the time gap between two consecutive blinks. Measured in milliseconds."
	},
	"idle-delay": {
		"type": "spinbutton",
		"default": 30000,
		"min": 5000,
		"max": 600000,
		"step": 5000,
		"units": "ms",
		"description": "Idle Delay",
		"tooltip": "This setting controls the time of inactivity (no mouse or keyboard input) after which the system is considered idle. Measured in milliseconds."
	}
}