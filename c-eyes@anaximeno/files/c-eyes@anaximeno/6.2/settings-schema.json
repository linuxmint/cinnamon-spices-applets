{
	"layout": {
		"type": "layout",
		"pages": [
			"general-page",
			"style-page"
		],
		"general-page": {
			"type": "page",
			"title": "General",
			"sections": [
				"general-section",
				"optimization-section",
				"effects-section"
			]
		},
		"style-page": {
			"type": "page",
			"title": "Style",
			"sections": [
				"styles-section",
				"colors-section"
			]
		},
		"general-section": {
			"type": "section",
			"title": "General",
			"keys": [
				"mode",
				"tooltip-message",
				"deactivate-on-fullscreen",
				"optimization-mode"
			]
		},
		"optimization-section": {
			"type": "section",
			"dependency": "optimization-mode=manual",
			"title": "Optimizations",
			"keys": [
				"repaint-interval",
				"repaint-angle"
			]
		},
		"effects-section": {
			"type": "section",
			"title": "Effects",
			"keys": [
				"blink-effect-enabled",
				"blink-period",
				"blink-gap",
				"sleep-effect-enabled",
				"idle-delay"
			]
		},
		"styles-section": {
			"type": "section",
			"title": "Style",
			"keys": [
				"mode",
				"pupil-shape",
				"line-width",
				"padding",
				"margin",
				"use-alternative-colors"
			]
		},
		"colors-section": {
			"type": "section",
			"title": "Colors",
			"dependency": "use-alternative-colors=true",
			"keys": [
				"base-color",
				"iris-color",
				"pupil-color"
			]
		}
	},
	"mode": {
		"type": "combobox",
		"default": "lids",
		"description": "Eye Mode",
		"options": {
			"Lids": "lids",
			"Bulb": "bulb"
		}
	},
	"pupil-shape": {
		"type": "combobox",
		"default": "round",
		"description": "Pupil Shape",
		"options": {
			"Round": "round",
			"Vertical": "vertical",
			"Horizontal": "horizontal"
		}
	},
	"tooltip-message": {
		"type": "entry",
		"default": "Hey, I saw that!",
		"description": "Tooltip Message on Hover"
	},
	"deactivate-on-fullscreen": {
		"type": "checkbox",
		"default": true,
		"description": "Deactivate On Fullscreen"
	},
	"optimization-mode": {
		"type": "combobox",
		"default": "balance",
		"description": "Optimization Mode",
		"options": {
			"Battery": "battery",
			"Balanced": "balance",
			"Performance": "performance",
			"Manual": "manual"
		}
	},
	"repaint-interval": {
		"type": "spinbutton",
		"default": 55,
		"min": 5,
		"max": 200,
		"step": 5,
		"units": "ms",
		"description": "Eye Update Interval",
		"tooltip": "This setting controls the time to redraw the eye again. Lower values (measured in miliseconds) result in smoother animation but require more processing power."
	},
	"repaint-angle": {
		"type": "spinbutton",
		"default": 0.05,
		"min": 0,
		"max": 1,
		"step": 0.05,
		"units": "radians",
		"description": "Eye Update Sensitivity",
		"tooltip": "This setting controls the minimum angle change between mouse movements required to redraw the eye. Lower values (measured in radians) result in smoother animation but require more processing power."
	},
	"line-width": {
		"type": "spinbutton",
		"description": "Line Width",
		"default": 2.0,
		"min": 1,
		"max": 5,
		"step": 0.5,
		"units": "px"
	},
	"margin": {
		"type": "spinbutton",
		"default": 8.0,
		"min": -16.0,
		"max": 32.0,
		"step": 0.5,
		"units": "px",
		"description": "Width",
		"tooltip": "This setting controls the width of the area around the eye within which the eye will follow the mouse cursor. Positive values increase the area, while negative values decrease it."
	},
	"padding": {
		"type": "spinbutton",
		"default": 8,
		"min": 0,
		"max": 32,
		"step": 2,
		"units": "px",
		"description": "Padding",
		"tooltip": "This setting controls the padding around the eye within which the eye will follow the mouse cursor. Increasing the padding decreases the radius of the eye, while decreasing the padding increases the radius of the eye."
	},
	"use-alternative-colors": {
		"type": "switch",
		"default": false,
		"description": "Use Alternative Colors for the Eye",
		"tooltip": "When disabled it will use the current system theme's default color for panel items."
	},
	"base-color": {
		"type": "colorchooser",
		"default": "#BEBEBE",
		"description": "Base Color"
	},
	"iris-color": {
		"type": "colorchooser",
		"default": "#9F5211",
		"description": "Iris Color"
	},
	"pupil-color": {
		"type": "colorchooser",
		"default": "#000000",
		"description": "Pupil Color"
	},
	"blink-effect-enabled": {
		"type": "checkbox",
		"default": true,
		"description": "Blink Effect"
	},
	"blink-period": {
		"type": "spinbutton",
		"dependency": "blink-effect-enabled",
		"default": 0.6,
		"min": 0.2,
		"max": 2,
		"step": 0.2,
		"units": "seconds",
		"description": "Blink Period",
		"tooltip": "This setting controls the duration of a full blink cycle (closing and opening)."
	},
	"blink-gap": {
		"type": "spinbutton",
		"dependency": "blink-effect-enabled",
		"default": 10,
		"min": 1,
		"max": 60,
		"step": 1,
		"units": "seconds",
		"description": "Blink Gap",
		"tooltip": "This setting controls the time gap between two consecutive blinks."
	},
	"sleep-effect-enabled": {
		"type": "checkbox",
		"default": true,
		"description": "Sleep Effect",
		"tooltip": "When enabled, the eyes will slowly close when the system is idle and open again when activity is detected."
	},
	"idle-delay": {
		"dependency": "sleep-effect-enabled",
		"type": "spinbutton",
		"default": 5,
		"min": 1,
		"max": 120,
		"step": 1,
		"units": "minutes",
		"description": "Idle Delay",
		"tooltip": "This setting controls the time of inactivity (no mouse or keyboard input) after which the system is considered idle."
	}
}