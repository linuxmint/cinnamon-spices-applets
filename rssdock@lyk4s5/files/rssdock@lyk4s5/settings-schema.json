{
    "news_sources": {
        "type": "list",
        "default": [
            {"label": "New York Times World", "url": "https://rss.nytimes.com/services/xml/rss/nyt/World.xml"}
        ],
        "description": "NEWS Sources",
        "columns": [
            {"id": "label", "title": "Source Name", "type": "string"},
            {"id": "url", "title": "RSS URL", "type": "string"}
        ]
    },
    "update_interval": {
        "type": "spinbutton",
        "default": 15,
        "min": 1,
        "max": 220,
        "step": 1,
        "units": "minutes",
        "description": "Update Frequency"
    },
    "scroll_limit": {
        "type": "spinbutton",
        "default": 30,
        "min": 10,
        "max": 200,
        "step": 1,
        "description": "Visible Characters"
    },
    "width_multiplier": {
        "type": "spinbutton",
        "default": 8.5,
        "min": 5.0,
        "max": 30.0,
        "step": 0.1,
        "description": "Width Multiplier"
    },
    "scroll_speed": {
        "type": "spinbutton",
        "default": 30,
        "min": 10,
        "max": 100,
        "step": 2,
        "units": "ms",
        "description": "Speed (Low=Fast)"
    },

    "vertical_offset": {
        "type": "spinbutton",
        "default": 5,
        "min": -20,
        "max": 60,
        "step": 1,
        "units": "px",
        "label": "Vertical Offset",
        "description": "Vertical Offset"
    }
}
