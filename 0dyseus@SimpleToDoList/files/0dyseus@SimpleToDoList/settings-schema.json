{
    "head0": {
        "type": "header",
        "description": "Applet settings"
    },
    "pref_custom_icon_for_applet": {
        "type": "iconfilechooser",
        "indent": true,
        "default": "",
        "description": "Icon",
        "tooltip": "Select an icon to show in the panel."
    },
    "pref_custom_label_for_applet": {
        "type": "entry",
        "indent": true,
        "default": "ToDo",
        "description": "Custom label",
        "tooltip": "Enter custom text to show in the panel."
    },
    "pref_overlay_key": {
        "type": "keybinding",
        "indent": true,
        "default": "",
        "description": "Keyboard shortcut to open and close the menu"
    },
    "pref_show_tasks_counter_on_applet": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Display tasks counter on applet"
    },
    "head1": {
        "type": "header",
        "description": "Menu settings"
    },
    "pref_use_fail_safe": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Avoid accidental deletions",
        "tooltip": "When enabled, to remove a task or a section of the menu, the Control key needs to be pressed."
    },
    "pref_animate_menu": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Animate menu",
        "tooltip": "Enables/Disables menu open/close animations."
    },
    "pref_keep_one_menu_open": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Keep just one sub menu open",
        "tooltip": "When enabled, the previously opened sub menu will be automatically closed."
    },
    "head2": {
        "type": "header",
        "description": "Sections appearance"
    },
    "pref_section_font_size": {
        "type": "spinbutton",
        "indent": true,
        "default": 1.25,
        "min": 0.1,
        "max": 10.0,
        "step": 0.05,
        "units": "ems",
        "description": "Label font size"
    },
    "pref_section_set_min_width": {
        "type": "spinbutton",
        "indent": true,
        "default": 350,
        "min": 0,
        "max": 1024,
        "step": 2,
        "units": "pixels",
        "description": "Set minimum entry width",
        "tooltip": "Cinnamon menus automatically change their size to accommodate the elements that they contain. Setting a fixed size for those elements will avoid the constant resizing of the menu when opening/closing sub menus."
    },
    "pref_section_set_max_width": {
        "type": "spinbutton",
        "indent": true,
        "default": 350,
        "min": 0,
        "max": 1024,
        "step": 2,
        "units": "pixels",
        "description": "Set maximum entry width",
        "tooltip": "Cinnamon menus automatically change their size to accommodate the elements that they contain. Setting a fixed size for those elements will avoid the constant resizing of the menu when opening/closing sub menus."
    },
    "pref_section_set_bold": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Set bold"
    },
    "pref_section_remove_native_entry_theming": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Remove native entry theming (only visuals)"
    },
    "pref_section_remove_native_entry_theming_sizing": {
        "type": "checkbox",
        "dependency": "pref_section_remove_native_entry_theming",
        "indent": true,
        "default": false,
        "description": "Remove native entry theming (also sizing)"
    },
    "head3": {
        "type": "header",
        "description": "Tasks appearance"
    },
    "pref_task_font_size": {
        "type": "spinbutton",
        "indent": true,
        "default": 1,
        "min": 0.1,
        "max": 10.0,
        "step": 0.05,
        "units": "ems",
        "description": "Label font size"
    },
    "pref_task_set_min_width": {
        "type": "spinbutton",
        "indent": true,
        "default": 350,
        "min": 0,
        "max": 1024,
        "step": 2,
        "units": "pixels",
        "description": "Set minimum entry width",
        "tooltip": "Cinnamon menus automatically change their size to accommodate the elements that they contain. Setting a fixed size for those elements will avoid the constant resizing of the menu when opening/closing sub menus."
    },
    "pref_task_set_max_width": {
        "type": "spinbutton",
        "indent": true,
        "default": 350,
        "min": 0,
        "max": 1024,
        "step": 2,
        "units": "pixels",
        "description": "Set maximum entry width",
        "tooltip": "Cinnamon menus automatically change their size to accommodate the elements that they contain. Setting a fixed size for those elements will avoid the constant resizing of the menu when opening/closing sub menus."
    },
    "pref_task_set_custom_spacing": {
        "type": "spinbutton",
        "indent": true,
        "default": 2,
        "min": 0,
        "max": 20,
        "step": 1,
        "units": "pixels",
        "description": "Custom elements spacing",
        "tooltip": "Some Cinnamon themes might set the spacing for the popup-menu-item class too big or too small, resulting in too much space wasted inside this applet menu or in elements to close to each other. This setting allows to change that spacing."
    },
    "pref_task_set_bold": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Set bold"
    },
    "pref_task_remove_native_entry_theming": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "description": "Remove native entry theming (only visuals)"
    },
    "pref_task_remove_native_entry_theming_sizing": {
        "type": "checkbox",
        "dependency": "pref_task_remove_native_entry_theming",
        "indent": true,
        "default": false,
        "description": "Remove native entry theming (also sizing)"
    },
    "head4": {
        "type": "header",
        "description": "Save as TODO file settings"
    },
    "pref_task_completed_character": {
        "type": "entry",
        "indent": true,
        "default": "✔",
        "description": "Character/s for completed tasks",
        "tooltip": "The character or characters that will represent a completed task on a TODO file."
    },
    "pref_task_notcompleted_character": {
        "type": "entry",
        "indent": true,
        "default": "☐",
        "description": "Character/s for not completed tasks",
        "tooltip": "The character or characters that will represent a not completed task on a TODO file."
    },
    "head5": {
        "type": "header",
        "description": "Task priorities settings"
    },
    "pref_tasks_priorities_colors_enabled": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Enable priority tags colorization",
        "tooltip": "If enabled, this option will colorize a task entry depending on the tags found on its text. Tasks can be \"tagged\" by simply writing \"@tagname\" as part of the task text. For now, there are 5 priority tags available."
    },
    "pref_tasks_priorities_highlight_entire_row": {
        "type": "checkbox",
        "dependency": "pref_tasks_priorities_colors_enabled",
        "indent": true,
        "default": true,
        "description": "Colorize entire menu item",
        "tooltip": "This option is useful, for example, when the Cinnamon theme used styles entries with a non transparent background image. The background color set by a priority tag will not be visible in this case. With this option enabled, the entire menu item of a task will be colorized and not just its entry."
    },
    "head6": {
        "type": "header",
        "description": "Colors for \"@critical\" priority tags"
    },
    "pref_tasks_priorities_critical_background": {
        "type": "colorchooser",
        "dependency": "pref_tasks_priorities_colors_enabled",
        "indent": true,
        "default": "rgba(255,0,0,1)",
        "description": "Background color"
    },
    "pref_tasks_priorities_critical_foreground": {
        "type": "colorchooser",
        "dependency": "pref_tasks_priorities_colors_enabled",
        "indent": true,
        "default": "rgba(0,0,0,1)",
        "description": "Text color"
    },
    "head7": {
        "type": "header",
        "description": "Colors for \"@high\" priority tags"
    },
    "pref_tasks_priorities_high_background": {
        "type": "colorchooser",
        "dependency": "pref_tasks_priorities_colors_enabled",
        "indent": true,
        "default": "rgba(200,0,0,1)",
        "description": "Background color"
    },
    "pref_tasks_priorities_high_foreground": {
        "type": "colorchooser",
        "dependency": "pref_tasks_priorities_colors_enabled",
        "indent": true,
        "default": "rgba(0,0,0,1)",
        "description": "Text color"
    },
    "head8": {
        "type": "header",
        "description": "Colors for \"@today\" priority tags"
    },
    "pref_tasks_priorities_today_background": {
        "type": "colorchooser",
        "dependency": "pref_tasks_priorities_colors_enabled",
        "indent": true,
        "default": "rgba(255,255,0,1)",
        "description": "Background color"
    },
    "pref_tasks_priorities_today_foreground": {
        "type": "colorchooser",
        "dependency": "pref_tasks_priorities_colors_enabled",
        "indent": true,
        "default": "rgba(0,0,0,1)",
        "description": "Text color"
    },
    "head9": {
        "type": "header",
        "description": "Colors for \"@medium\" priority tags"
    },
    "pref_tasks_priorities_medium_background": {
        "type": "colorchooser",
        "dependency": "pref_tasks_priorities_colors_enabled",
        "indent": true,
        "default": "rgba(232,204,73,1)",
        "description": "Background color"
    },
    "pref_tasks_priorities_medium_foreground": {
        "type": "colorchooser",
        "dependency": "pref_tasks_priorities_colors_enabled",
        "indent": true,
        "default": "rgba(0,0,0,1)",
        "description": "Text color"
    },
    "head10": {
        "type": "header",
        "description": "Colors for \"@low\" priority tags"
    },
    "pref_tasks_priorities_low_background": {
        "type": "colorchooser",
        "dependency": "pref_tasks_priorities_colors_enabled",
        "indent": true,
        "default": "rgba(221,160,221,1)",
        "description": "Background color"
    },
    "pref_tasks_priorities_low_foreground": {
        "type": "colorchooser",
        "dependency": "pref_tasks_priorities_colors_enabled",
        "indent": true,
        "default": "rgba(0,0,0,1)",
        "description": "Text color"
    },
    "head11": {
        "type": "header",
        "description": "Debugging"
    },
    "pref_logging_enabled": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "description": "Enable logging",
        "tooltip": "It enables the ability to log the output of several functions used by the applet."
    },
    "pref_initial_load": {
        "type": "generic",
        "default": false
    },
    "pref_todo_list": {
        "type": "generic",
        "default": {}
    },
    "pref_imp_exp_last_selected_directory": {
        "type": "generic",
        "default": ""
    },
    "pref_save_last_selected_directory": {
        "type": "generic",
        "default": ""
    }
}
