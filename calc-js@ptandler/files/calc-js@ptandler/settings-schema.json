{
  "layout": {
    "type": "layout",
    "pages": [
      "panel-options"
    ],
    "panel-options": {
      "type": "page",
      "title": "Settings",
      "sections": [
        "keyboard-section",
        "input-section",
        "history-section"
      ]
    },
    "keyboard-section": {
      "type": "section",
      "title": "Keyboard",
      "keys": [
        "keyToggle"
      ]
    },
    "input-section": {
      "type": "section",
      "title": "Number Format",
      "keys": [
        "convertLocaleNumberSeparators",
        "convertLocaleNumberSeparatorsHelp"
      ]
    },
    "history-section": {
      "type": "section",
      "title": "Expression and Result History",
      "keys": [
        "recentHistoryMaxLength",
        "historyMaxDisplayLength"
      ]
    }
  },
  "keyToggle": {
    "type": "keybinding",
    "description": "Show / hide mini calculator",
    "default": "Calculator::<Primary><Alt><Super>c"
  },
  "convertLocaleNumberSeparators": {
    "type": "switch",
    "default": true,
    "description": "Convert numbers in current locale's format to JS numbers"
  },
  "convertLocaleNumberSeparatorsHelp": {
    "type": "label",
    "description": "e.g. for the German locale convert `1,2 + 3,4` to `1.2 + 3.4`. Makes pasting number easier."
  },
  "recentHistoryMaxLength": {
    "type": "spinbutton",
    "default": 2,
    "min": 0,
    "max": 5,
    "step": 1,
    "description": "Max number of recent expressions"
  },
  "historyMaxDisplayLength": {
    "type": "spinbutton",
    "default": 6,
    "min": 0,
    "max": 16,
    "step": 1,
    "description": "Max length of expression history"
  }
}
