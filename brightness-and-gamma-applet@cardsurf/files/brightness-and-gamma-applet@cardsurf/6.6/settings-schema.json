{
    "BGAlayout" : {
        "type": "layout",
        "pages": ["page_general", "page_presets"],
        "page_general": {
            "type": "page",
            "title" : "General",
            "sections" : ["section_config", "section_values", "section_gui"]
        },
        "page_presets": {
            "type": "page",
            "title" : "Presets",
            "sections" : ["section_presets"]
        },
        "section_config": {
            "type": "section",
            "title": "Configuration",
            "keys": [
                "disable_nightmode",
                "apply_startup",
                "apply_every",
                "apply_changing_monitors",
                "update_scroll",
                "scroll_step",
                "brightness_up_shortcut",
                "brightness_down_shortcut",
                "toggle_on_off_shortcut",
                "way_to_set_off"
            ]
        },
        "section_values": {
            "type": "section",
            "title": "Values",
            "keys": [
                "gamma_or_temp",
                "values_reload",
                "minimum_brightness",
                "maximum_brightness",
                "minimum_gamma",
                "maximum_gamma",
                "minimum_temp",
                "maximum_temp",
                "save_every"
            ]
        },
        "section_gui": {
            "type": "section",
            "title": "Gui",
            "keys": [
                "show_shortcuts_in_menu",
                "options_type",
                "baga_icon"
            ]
        },
        "section_presets": {
            "type": "section",
            "title": "Your presets",
            "keys": [
                "preset_label",
                "preset_list",
                "preset_list_temp",
                "show_shortcuts_in_menu",
                "preset_selected_keybind",
                "preset_copy_keybind",
                "preset_sunrise_sunset_button",
                "preset_reload",
                "smooth_duration-label",
                "smooth_duration"
            ]
        }
    },
    "disable_nightmode" : {
        "type" : "switch",
        "default" : false,
        "description": "Disable Night Mode",
        "tooltip": "Disable Cinnamon Night Mode while this applet is running.\nThis prevents the screen from flickering.\nThe adjustment time can be up to twice the number of seconds indicated below."
    },
    "apply_startup" : {
        "type" : "switch",
        "default" : true,
        "description": "Apply at startup",
        "tooltip": "Apply values at applet startup"
    },
    "apply_every": {
        "type": "spinbutton",
        "default": 0,
        "min": 0,
        "max": 604800,
        "step": 1,
        "units": "seconds",
        "description": "Apply every",
        "tooltip" : "How often to apply values. 0 means that values are not applied periodically."
    },
    "apply_asynchronously" : {
        "type" : "generic",
        "default" : true,
        "description": "Apply asynchronously",
        "tooltip": "Apply values in a background process"
    },
    "smooth_duration-label" : {
        "type": "label",
        "description": "The changes are made step by step.\nHere you define the duration (in milliseconds) of each step in which the values are changed by one unit, if necessary.\n0 means instantaneous changes.\nRecommended value: between 200 and 300."
    },
    "smooth_duration" : {
        "type" : "scale",
        "default" : 200,
        "min": 0,
        "max": 1000,
        "step": 50,
        "show-value": true,
        "description": "Step duration (ms)"
    },
    "apply_changing_monitors" : {
        "type" : "switch",
        "default" : false,
        "description": "Apply when the number of monitors changes"
    },
    "update_scroll" : {
        "type" : "switch",
        "default" : true,
        "description": "Adjust brightness scroll",
        "tooltip": "Allows to adjust a brightness value on a mouse scroll"
    },
    "scroll_step": {
        "type": "spinbutton",
        "default": 5,
        "min": 0,
        "max": 200,
        "step": 1,
        "units": "%",
        "description": "Scroll step",
        "tooltip" : "A percentage of a brightness value to adjust on a mouse scroll"
    },
    "brightness_up_shortcut": {
        "type": "keybinding",
        "default": "::",
        "description": "Hotkey to Increase brightness"
    },
    "brightness_down_shortcut": {
        "type": "keybinding",
        "default": "::",
        "description": "Hotkey to Decrease brightness"
    },
    "toggle_on_off_shortcut": {
        "type": "keybinding",
        "default": "::",
        "description": "Hotkey to Toggle On/Off this applet"
    },
    "way_to_set_off": {
        "type": "combobox",
        "default": "nochange",
        "options": {
            "No change": "nochange",
            "All values set to 100%": "all100"
        },
        "description": "Way to set this applet off",
        "dependency": "toggle_on_off_shortcut!=::"
    },
    
    "gamma_or_temp": {
        "type": "combobox",
        "default": "gamma",
        "options": {
            "Gamma Red-Green-Blue": "gamma",
            "Screen Temperature (K)": "temp"
        },
        "description": "Setting Method",
        "dependency": "xsct_is_present"
    },

    "minimum_brightness": {
        "type": "spinbutton",
        "default": 30,
        "min": 10,
        "max": 50,
        "step": 1,
        "units": "%",
        "description": "Minimum brightness",
        "tooltip": "A minimum value of brightness. Value from 10% to 50%."
    },
    "maximum_brightness": {
        "type": "spinbutton",
        "default": 100,
        "min": 51,
        "max": 200,
        "step": 1,
        "units": "%",
        "description": "Maximum brightness",
        "tooltip": "A maximum value of brightness. Value from 51% to 200%."
    },
    "minimum_gamma": {
        "type": "spinbutton",
        "default": 30,
        "min": 10,
        "max": 50,
        "step": 1,
        "units": "%",
        "description": "Minimum gamma",
        "tooltip": "A minimum value of gamma. Value from 10% to 50%.",
        "dependency": "gamma_or_temp=gamma"
    },
    "maximum_gamma": {
        "type": "spinbutton",
        "default": 100,
        "min": 51,
        "max": 200,
        "step": 1,
        "units": "%",
        "description": "Maximum gamma",
        "tooltip": "A maximum value of gamma. Value from 51% to 200%.",
        "dependency": "gamma_or_temp=gamma"
    },
    "minimum_temp": {
        "type": "spinbutton",
        "default": 2700,
        "min": 700,
        "max": 6500,
        "step": 100,
        "units": "K",
        "description": "Minimum temperature",
        "tooltip": "A minimum value of temperature. Value from 700 K to 6500 K.",
        "dependency": "gamma_or_temp=temp"
    },
    "maximum_temp": {
        "type": "spinbutton",
        "default": 20000,
        "min": 6500,
        "max": 22000,
        "step": 100,
        "units": "K",
        "description": "Maximum temperature",
        "tooltip": "A maximum value of temperature. Value from 6500 K to 22000 K.",
        "dependency": "gamma_or_temp=temp"
    },
    "save_every": {
        "type": "spinbutton",
        "default": 60,
        "min": 5,
        "max": 86400,
        "step": 1,
        "units": "seconds",
        "description": "Save every",
        "tooltip" : "How often to save last used values"
    },

    "options_type" : {
        "type": "combobox",
        "default" : 0,
        "description" : "Show",
        "options" : {
            "All" : 0,
            "Brightness" : 1,
            "Gamma / Temperature" : 2
        },
        "tooltip" : "Values shown in user interface"
    },
    "baga_icon" : {
        "type" : "combobox",
        "default" : "sun",
        "options": {
            "Only sun": "sun",
            "Screen with sun": "baga",
            "Symbolic": "yaru"
        },
        "description" : "Icon",
        "tooltip": "An icon displayed in a panel"
    },

    "preset_label": {
        "type": "label",
        "description": "You can define or modify presets below, which can then be accessed via the applet's context menu.\nOnly the first Start at Sunrise and Start at Sunset checked boxes are taken into account."
    },
    "preset_list": {
        "type": "list",
        "description": "Your presets",
        "dependency": "gamma_or_temp=gamma", 
        "columns" : [
            {"id": "name", "title": "Name", "type": "string", "expand-width": true},
            {"id": "show", "title": "Show\nin menu", "type": "boolean", "align": 0.5},
            {"id": "brightness", "title": "Brightness", "type": "integer", "align": 0.5, "min": 0, "max": 200},
            {"id": "gamma_red", "title": "Gamma\nRed", "type": "integer", "align": 0.5, "min": 0, "max": 200},
            {"id": "gamma_green", "title": "Gamma\nGreen", "type": "integer", "align": 0.5, "min": 0, "max": 200},
            {"id": "gamma_blue", "title": "Gamma\nBlue", "type": "integer", "align": 0.5, "min": 0, "max": 200},
            {"id": "start_at_sunrise", "title": "Start at\nSunrise", "type": "boolean", "align": 0.5},
            {"id": "start_at_sunset", "title": "Start at\nSunset", "type": "boolean", "align": 0.5},
            {"id": "shortcut", "title": "Hotkey", "type": "string", "default": "::"}
        ],
        "default": [
            {
                "name": "All values at maximum",
                "show": true,
                "brightness": 100,
                "gamma_red": 100,
                "gamma_green": 100,
                "gamma_blue": 100,
                "start_at_sunrise": false,
                "start_at_sunset": false
            },
            {
                "name": "Day-time comfort",
                "show": true,
                "brightness": 80,
                "gamma_red": 100,
                "gamma_green": 95,
                "gamma_blue": 90,
                "start_at_sunrise": false,
                "start_at_sunset": false
            },
            {
                "name": "Night-time comfort",
                "show": true,
                "brightness": 70,
                "gamma_red": 100,
                "gamma_green": 90,
                "gamma_blue": 80,
                "start_at_sunrise": false,
                "start_at_sunset": false
            }
        ]
    },
    "preset_list_temp": {
        "type": "list",
        "description": "Your presets",
        "dependency": "gamma_or_temp=temp", 
        "columns" : [
            {"id": "name", "title": "Name", "type": "string", "expand-width": true},
            {"id": "show", "title": "Show\nin menu", "type": "boolean", "align": 0.5},
            {"id": "brightness", "title": "Brightness", "type": "integer", "align": 0.5, "min": 0, "max": 100, "default": 100},
            {"id": "temperature", "title": "Temperature", "type": "integer", "align": 0.5, "min": 700, "max": 20000, "default": 6500},
            {"id": "start_at_sunrise", "title": "Start at\nSunrise", "type": "boolean", "align": 0.5},
            {"id": "start_at_sunset", "title": "Start at\nSunset", "type": "boolean", "align": 0.5},
            {"id": "shortcut", "title": "Hotkey", "type": "string", "default": "::"}
        ],
        "default": [
            {
                "name": "Standard values",
                "show": true,
                "brightness": 100,
                "temperature": 6500,
                "start_at_sunrise": false,
                "start_at_sunset": false
            },
            {
                "name": "Day-time comfort",
                "show": true,
                "brightness": 80,
                "temperature": 4000,
                "start_at_sunrise": false,
                "start_at_sunset": false
            },
            {
                "name": "Night-time comfort",
                "show": true,
                "brightness": 70,
                "gamma_red": 2700,
                "start_at_sunrise": false,
                "start_at_sunset": false
            }
        ]
    },
    
    "show_shortcuts_in_menu": {
        "type": "switch",
        "default": false,
        "description": "Show shortcuts in the menu"
    },
    
    "preset_selected_keybind": {
        "type": "keybinding",
        "default": "::",
        "description": "Choose a shortcut to copy",
        "tooltip": "Helps you select a keyboard shortcut to use in any of the items listed above.\nOnce selected, click on the button below, then edit the item to paste (Ctrl+V) this shortcut."
    },
    
    "preset_copy_keybind": {
        "type": "button",
        "description": "Copy this shortcut to the clipboard",
        "callback": "on_preset_copy_shortcut"
    },

    "preset_sunrise_sunset_button": {
        "type": "button",
        "description": "Set Sunrise and Sunset times",
        "callback": "on_preset_sunrise_sunset_button_clicked"
    },

    "preset_reload": {
        "type": "button",
        "description": "Apply all changes",
        "callback": "on_preset_reload_button_clicked"
    },
    
    "values_reload": {
        "type": "button",
        "description": "Apply the selected method",
        "callback": "on_values_reload_button_clicked",
        "dependency": "xsct_is_present"
    },

    "last_values_string_temp" : {
        "type": "generic",
        "default" : ""
    },

    "last_values_string" : {
        "type": "generic",
        "default" : ""
    },

    "numberOfMonitors" : {
        "type": "generic",
        "default" : 1
    },
    
    "xsct_is_present" : {
        "type": "generic",
        "default" : false
    },
    
    "screen_temp": {
        "type": "generic",
        "default" : 6500
    }
}
