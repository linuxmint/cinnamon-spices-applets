{
    "numCols": {
        "type": "spinbutton",
        "default": 2,
        "min": 1,
        "max": 12,
        "step": 1,
        "units": "desktops",
        "description": "Number of columns:"
    },
    "numRows": {
        "type": "spinbutton",
        "default": 1,
        "min": 1,
        "max": 6,
        "step": 1,
        "units": "desktops",
        "description": "Number of rows:"
    },
    "style": {
        "type": "combobox",
        "description": "Style:",
        "default": "single-row",
        "options": {
            "Single Row": "single-row",
            "Grid": "grid"
        }
    },
    "registerUpDownKeyBindings": {
        "type": "checkbox",
        "default": true,
        "description": "Use Keyboard shortcuts (Ctrl+Alt+Up/Down) to switch desktop rows",
        "tooltip": "This prevents the use of the Expo and Scale keyboard shortcuts in Cinnamon"
    },
    "scrollWheelBehavior": {
        "type": "combobox",
        "description": "Scroll Wheel Behavior:",
        "default": "col",
        "options": {
            "Scroll By Column": "col",
            "Scroll By Row": "row"
        }
    }
}
