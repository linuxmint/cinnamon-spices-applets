{
    "layout": {
        "type": "layout",
        "pages": [
            "page1",
            "page2"
        ],
        "page1": {
            "type": "page",
            "title": "Calendar",
            "sections": [
                "section1",
                "section2",
                "section3"
            ]
        },
        "page2": {
            "type": "page",
            "title": "World Clocks",
            "sections": [
                "section4"
            ]
        },
        "section1": {
            "type": "section",
            "title": "Display",
            "keys": [
                "show-events",
                "show-week-numbers",
                "weekend-length",
                "use-custom-format",
                "custom-format",
                "format-button"
            ]
        },
        "section2": {
            "type": "section",
            "title": "Get Public Holidays for",
            "keys": [
                "country",
                "has_region",
                "region_aus",
                "region_can",
                "region_deu",
                "region_esp",
                "region_nzl",
                "region_svk",
                "region_che",
                "region_gbr",
                "region_usa"
            ]
        },
        "section3": {
            "type": "section",
            "title": "Keyboard shortcuts",
            "keys": [
                "keyOpen"
            ]
        },
        "section4": {
            "type": "section",
            "title": "Show World Times",
            "keys": [
                "worldclocks"
            ]
        }
    },
    "show-events" : {
        "type" : "switch",
        "default" : true,
        "description": "Show calendar events",
        "tooltip": "Check this to display events in the calendar."
    },
    "show-week-numbers": {
        "type": "switch",
        "default": false,
        "description": "Show week numbers in calendar",
        "tooltip": "Check this to show week numbers in the calendar."
    },
    "weekend-length": {
        "type": "radiogroup",
        "default": 2,
        "description": "Mark as weekend days",
        "tooltip": "Set how many days are marked as non-working days per week.",
        "options": {
            "One day": 1,
            "Two days": 2
        }
    },
    "use-custom-format": {
        "type": "switch",
        "default": false,
        "description": "Use a custom date format",
        "tooltip": "Check this to define a custom format for the date in the calendar applet."
    },
    "custom-format": {
        "type": "entry",
        "default": "%A, %B %e, %H:%M",
        "description": "Date format",
        "indent": true,
        "dependency": "use-custom-format",
        "tooltip": "Set your custom format here."
    },
    "format-button": {
        "type": "button",
        "description": "Show information on date format syntax",
        "indent": true,
        "dependency": "use-custom-format",
        "callback": "on_custom_format_button_pressed",
        "tooltip": "Click this button to know more about the syntax for date formats."
    },
