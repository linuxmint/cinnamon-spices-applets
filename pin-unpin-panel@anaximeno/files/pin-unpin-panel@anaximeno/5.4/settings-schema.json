{
    "general": {
        "type": "section",
        "description": "General"
    },

    "unpin-autohide-type": {
        "type": "combobox",
        "description": "Hide Type on Unpin",
        "default": "true",
        "options": {
            "Auto Hide": "true",
            "Intelligent Hide": "intel"
        }
    },

    "pinned-at-startup": {
        "type": "combobox",
        "description": "At Startup",
        "default": 0,
        "options": {
            "Leave the panel as it is": 0,
            "Pin the panel": 1,
            "Unpin the panel": 2
        }
    },

    "style": {
        "type": "section",
        "description": "Style"
    },

    "use-custom-icons": {
        "type": "switch",
        "description": "Use Custom Icons",
        "default": false
    },
    "pin-icon": {
        "type": "iconfilechooser",
        "default": "xapp-pin-symbolic",
        "description": "Pin Icon",
        "dependency": "use-custom-icons"
    },
    "unpin-icon": {
        "type": "iconfilechooser",
        "default": "xapp-unpin-symbolic",
        "description": "Unpin Icon",
        "dependency": "use-custom-icons"
    },

    "key-bindings": {
        "type": "section",
        "description": "Key Bindings"
    },

    "toggle-panel-pin-binding-keys": {
        "type": "keybinding",
        "description": "Toggle Panel Pin State",
        "default": "",
        "tooltip": "Set keybinding to pin the panel"
    },
    "peek-panel-bindind-keys": {
        "type": "keybinding",
        "description": "Peek Hidden Panel",
        "default": "",
        "tooltip": "Set keybinding to temporarily show the panel"
    }
 }
