{
  "interval": {
    "type": "spinbutton",
    "default": 5000,
    "min": 2000,
    "max": 30000,
    "step": 100,
    "units": "ms",
    "description": "Update interval"
  },
  "use-fahrenheit": {
    "type": "switch",
    "default": false,
    "description": "Show temperature in Fahrenheit."
  },
  "show-unit": {
    "type": "switch",
    "default": true,
    "description": "Show unit",
    "tooltip": "Whether or not show the unit after the temperature value."
  },
  "show-unit-letter": {
    "type": "switch",
    "default": false,
    "description": "Show unit letter",
    "tooltip": "Whether or not show the unit letter (C or F).",
    "dependency": "show-unit"
  }
}

