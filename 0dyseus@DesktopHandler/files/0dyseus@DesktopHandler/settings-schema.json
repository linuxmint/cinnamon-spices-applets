{
    "head0": {
        "type": "header",
        "description": "Applet options: "
    },
    "pref_custom_icon": {
        "indent": true,
        "type": "iconfilechooser",
        "default": "windows-quick-list-symbolic",
        "description": "Icon for Applet (Leave blank to remove icon):",
        "tooltip": "Set a custom icon for the applet."
    },
    "pref_applet_with": {
        "indent": true,
        "type": "spinbutton",
        "description": "Applet custom width (Set to 0 (zero) to not set a width):",
        "min": 0,
        "max": 500,
        "step": 1,
        "units": "pixels",
        "default": 0
    },
    "pref_applet_background_color": {
        "indent": true,
        "type": "colorchooser",
        "default": "rgba(0,0,0,0)",
        "description": "Background color for the applet:",
        "tooltip": "I mainly added this so it's easy to see the applet the first time is placed in a panel."
    },
    "div1": {
        "type": "separator"
    },
    "head1": {
        "type": "header",
        "description": "Mouse scroll options: "
    },
    "pref_scroll_action": {
        "indent": true,
        "type": "combobox",
        "default": "switch_workspace",
        "description": "Action on scrolling: ",
        "options": {
            "Switch between workspaces": "switch_workspace",
            "Adjust opacity of windows": "adjust_opacity",
            "Toggle Show desktop": "desktop",
            "Switch between windows": "switch-windows",
            "None": "none"
        },
        "tooltip": ""
    },
    "pref_prevent_fast_scroll": {
        "indent": true,
        "type": "checkbox",
        "default": true,
        "description": "Prevent accidental workspace/window switching on rapid scrolling",
        "tooltip": ""
    },
    "pref_scroll_delay": {
        "indent": true,
        "type": "spinbutton",
        "description": "Minimum delay between scrolls:",
        "min": 0,
        "max": 500,
        "step": 10,
        "units": "milliseconds",
        "default": 200,
        "dependency": "pref_prevent_fast_scroll"
    },
    "pref_separated_scroll_action": {
        "indent": true,
        "type": "checkbox",
        "default": false,
        "description": "Independent actions for scrolling up and down",
        "tooltip": ""
    },
    "pref_scroll_up_action": {
        "indent": true,
        "type": "combobox",
        "default": "none",
        "description": "Action on scrolling up: ",
        "options": {
            "Expo": "expo",
            "Overview": "overview",
            "Launch App Switcher": "appswitcher",
            "Toggle Show desktop": "desktop",
            "Run 1st Custom Command": "cc1",
            "Run 2nd Custom Command": "cc2",
            "Run 3rd Custom Command": "cc3",
            "Run 4rd Custom Command": "cc4",
            "None": "none"
        },
        "dependency": "pref_separated_scroll_action",
        "tooltip": ""
    },
    "pref_scroll_down_action": {
        "indent": true,
        "type": "combobox",
        "default": "none",
        "description": "Action on scrolling down: ",
        "options": {
            "Expo": "expo",
            "Overview": "overview",
            "Launch App Switcher": "appswitcher",
            "Toggle Show desktop": "desktop",
            "Run 1st Custom Command": "cc1",
            "Run 2nd Custom Command": "cc2",
            "Run 3rd Custom Command": "cc3",
            "Run 4rd Custom Command": "cc4",
            "None": "none"
        },
        "dependency": "pref_separated_scroll_action",
        "tooltip": ""
    },
    "div2": {
        "type": "separator"
    },
    "head2": {
        "type": "header",
        "description": "Mouse click options: "
    },
    "pref_left_click_action": {
        "indent": true,
        "type": "combobox",
        "default": "desktop",
        "description": "Action on applet left click: ",
        "options": {
            "Expo": "expo",
            "Overview": "overview",
            "Launch App Switcher": "appswitcher",
            "Toggle Show desktop": "desktop",
            "Run 1st Custom Command": "cc1",
            "Run 2nd Custom Command": "cc2",
            "Run 3rd Custom Command": "cc3",
            "Run 4rd Custom Command": "cc4",
            "None": "none"
        },
        "tooltip": ""
    },
    "pref_middle_click_action": {
        "indent": true,
        "type": "combobox",
        "default": "cc3",
        "description": "Action on applet middle click: ",
        "options": {
            "Expo": "expo",
            "Overview": "overview",
            "Launch App Switcher": "appswitcher",
            "Toggle Show desktop": "desktop",
            "Run 1st Custom Command": "cc1",
            "Run 2nd Custom Command": "cc2",
            "Run 3rd Custom Command": "cc3",
            "Run 4rd Custom Command": "cc4",
            "None": "none"
        },
        "tooltip": ""
    },

    "div3": {
        "type": "separator"
    },
    "head3": {
        "type": "header",
        "description": "Windows menu options"
    },
    "pref_windows_list_menu_enabled": {
        "indent": true,
        "type": "checkbox",
        "default": true,
        "description": "Enable Windows list menu",
        "tooltip": ""
    },
    "pref_button_to_open_menu": {
        "indent": true,
        "type": "combobox",
        "default": "winlistmenu3",
        "dependency": "pref_windows_list_menu_enabled",
        "description": "Mouse button to open menu (It will override mouse click actions):",
        "options": {
            "Left click": "winlistmenu1",
            "Middle click": "winlistmenu2",
            "Right click": "winlistmenu3"
        }
    },
    "pref_show_close_buttons": {
        "indent": true,
        "type": "checkbox",
        "dependency": "pref_windows_list_menu_enabled",
        "default": true,
        "description": "Show close buttons on windows list",
        "tooltip": ""
    },
    "pref_show_close_all_buttons": {
        "indent": true,
        "type": "checkbox",
        "default": true,
        "dependency": "pref_windows_list_menu_enabled",
        "description": "Show close all windows buttons for workspaces",
        "tooltip": ""
    },
    "pref_keep_menu_open": {
        "indent": true,
        "type": "checkbox",
        "dependency": "pref_windows_list_menu_enabled",
        "default": true,
        "description": "Keep menu open while closing windows",
        "tooltip": ""
    },
    "pref_show_context_menu_default_items": {
        "indent": true,
        "type": "checkbox",
        "dependency": "pref_windows_list_menu_enabled",
        "default": true,
        "description": "Show context menu default items on right click",
        "tooltip": ""
    },
    "pref_show_context_menu_help": {
        "indent": true,
        "type": "checkbox",
        "dependency": "pref_windows_list_menu_enabled",
        "default": false,
        "description": "Show \"Help\"",
        "tooltip": ""
    },
    "pref_show_context_menu_about": {
        "indent": true,
        "type": "checkbox",
        "dependency": "pref_windows_list_menu_enabled",
        "default": false,
        "description": "Show \"About...\"",
        "tooltip": ""
    },
    "pref_show_context_menu_configure": {
        "indent": true,
        "type": "checkbox",
        "dependency": "pref_windows_list_menu_enabled",
        "default": true,
        "description": "Show \"Configure...\"",
        "tooltip": ""
    },
    "pref_show_context_menu_remove": {
        "indent": true,
        "type": "checkbox",
        "dependency": "pref_windows_list_menu_enabled",
        "default": false,
        "description": "Show \"Remove this applet\"",
        "tooltip": ""
    },

    "div4": {
        "type": "separator"
    },
    "head4": {
        "type": "header",
        "description": "Peek at desktop options:"
    },
    "pref_peek_desktop_enabled": {
        "indent": true,
        "type": "checkbox",
        "default": false,
        "description": "Opacify windows on hover (a.k.a. desktop peek)",
        "tooltip": "Take a glance at your desktop and desklets."
    },
    "pref_peek_desktop_delay": {
        "indent": true,
        "type": "spinbutton",
        "description": "Peek desktop trigger delay:",
        "min": 0,
        "max": 2000,
        "step": 10,
        "units": "milliseconds",
        "default": 200,
        "dependency": "pref_peek_desktop_enabled"
    },
    "pref_opacify_desktop_icons": {
        "indent": true,
        "type": "checkbox",
        "default": false,
        "dependency": "pref_peek_desktop_enabled",
        "description": "Opacify the icons on the desktop",
        "tooltip": ""
    },
    "pref_opacify_desklets": {
        "indent": true,
        "type": "checkbox",
        "default": false,
        "dependency": "pref_peek_desktop_enabled",
        "description": "Opacify desklets",
        "tooltip": ""
    },
    "pref_peek_opacity": {
        "indent": true,
        "type": "scale",
        "default": 120,
        "min": 0,
        "max": 255,
        "step": 10,
        "dependency": "pref_peek_desktop_enabled",
        "description": "Level of opacity:",
        "tooltip": ""
    },
    "pref_blur_effect_enabled": {
        "indent": true,
        "type": "checkbox",
        "default": false,
        "dependency": "pref_peek_desktop_enabled",
        "description": "Blur windows on hover",
        "tooltip": ""
    },

    "div5": {
        "type": "separator"
    },
    "head5": {
        "type": "header",
        "description": "Custom Commands: "
    },
    "pref_custom_cmd1_action": {
        "indent": true,
        "type": "entry",
        "description": "1st Custom Command:",
        "default": "gnome-system-monitor"
    },
    "pref_custom_cmd2_action": {
        "indent": true,
        "type": "entry",
        "description": "2nd Custom Command:",
        "default": "gnome-terminal"
    },
    "pref_custom_cmd3_action": {
        "indent": true,
        "type": "entry",
        "description": "3rd Custom Command:",
        "default": "nohup cinnamon --replace > /dev/null 2>&1 &"
    },
    "pref_custom_cmd4_action": {
        "indent": true,
        "type": "entry",
        "description": "4rd Custom Command:",
        "default": ""
    },
    "div6": {
        "type": "separator"
    },
    "head6": {
        "type": "header",
        "description": "App Switcher Settings: "
    },
    "pref_switcher_style": {
        "indent": true,
        "type": "combobox",
        "default": "default",
        "description": "App switcher style: ",
        "options": {
            "Icons only": "icons",
            "Thumbnails only": "thumbnails",
            "Icons and thumbnails": "icons+thumbnails",
            "Icons and window preview": "icons+preview",
            "Window preview (no icons)": "preview",
            "Coverflow (3D)": "coverflow",
            "Timeline (3D)": "timeline",
            "System default": "default"
        },
        "tooltip": ""
    },
    "pref_switcher_scope": {
        "indent": true,
        "type": "combobox",
        "default": "switch-windows",
        "description": "Switch between windows from: ",
        "options": {
            "Current workspace": "switch-windows",
            "All workspaces": "switch-panels",
            "Current Application": "switch-group"
        },
        "tooltip": ""
    },
    "pref_switcher_modified": {
        "indent": true,
        "type": "combobox",
        "default": "switch-panels",
        "description": "When a modifier key is pressed, switch between windows from: ",
        "options": {
            "Current workspace": "switch-windows",
            "All workspaces": "switch-panels",
            "Current Application": "switch-group"
        },
        "tooltip": ""
    },
    "pref_switcher_modifier": {
        "indent": true,
        "type": "combobox",
        "default": "4",
        "description": "Modifier key: ",
        "options": {
            "Ctrl": "4",
            "Shift": "1"
        },
        "tooltip": ""
    }
}
