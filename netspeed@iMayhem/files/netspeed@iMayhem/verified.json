{
    "layout": {
        "appearance": {
            "type": "page",
            "title": "Appearance",
            "sections": {
                "visuals": {
                    "type": "section",
                    "title": "Visual Settings",
                    "keys": [
                        "appletLanguage",
                        "iconTheme",
                        "layoutStyle",
                        "compactMode"
                    ]
                }
            }
        },
        "monitoring": {
            "type": "page",
            "title": "Monitoring",
            "sections": {
                "general": {
                    "type": "section",
                    "title": "General",
                    "keys": [
                        "refreshRate",
                        "ignoreLocalTraffic",
                        "overrideInterface"
                    ]
                },
                "stats": {
                    "type": "section",
                    "title": "Statistics",
                    "keys": [
                        "showSessionStats",
                        "dailyLogRetention"
                    ]
                }
            }
        },
        "dataplan": {
            "type": "page",
            "title": "Data & Ping",
            "sections": {
                "data": {
                    "type": "section",
                    "title": "Data Plan",
                    "keys": [
                        "dataLimitType",
                        "dataLimitValue",
                        "dataLimitUnit",
                        "alertPercentage"
                    ]
                },
                "ping": {
                    "type": "section",
                    "title": "Latency (Ping)",
                    "keys": [
                        "showPing",
                        "pingAlways",
                        "pingServer"
                    ]
                }
            }
        },
        "system": {
            "type": "page",
            "title": "System",
            "sections": {
                "support": {
                    "type": "section",
                    "title": "Support",
                    "keys": [
                        "reportIssue"
                    ]
                },
                "actions": {
                    "type": "section",
                    "title": "Actions",
                    "keys": [
                        "saveSettings"
                    ]
                }
            }
        }
    },
