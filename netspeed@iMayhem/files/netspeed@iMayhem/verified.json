    "iconTheme": {
        "type": "combobox",
        "default": "arrows",
        "options": {
            "arrows": "Arrows (\u2193 \u2191)",
            "small_arrows": "Small Arrows (\u25be \u25b4)",
            "triangles": "Triangles (\u25bc \u25b2)",
            "chevrons": "Chevrons (\u2228 \u2227)",
            "guillemets": "Guillemets (\u00bb \u00ab)"
        },
        "description": "Icon Theme"
    },
    "layoutStyle": {
        "type": "combobox",
        "default": "classic",
        "options": {
            "classic": "Side by Side (Default)",
            "vertical": "Stacked Vertically"
        },
        "description": "Layout Style"
    },
    "compactMode": {
        "type": "switch",
        "default": false,
        "description": "Compact Mode (e.g. 1.2M instead of 1.2 MB/s)"
    },
    "refreshRate": {
        "type": "spinbutton",
        "default": 1,
        "min": 1,
        "max": 10,
        "step": 1,
        "description": "Refresh Interval (seconds)"
    },
    "overrideInterface": {
        "type": "entry",
        "default": "",
        "description": "Network Interface (Leave empty for Auto)"
    },
    "ignoreLocalTraffic": {
        "type": "switch",
        "default": true,
        "description": "Ignore Local Loopback Traffic"
    },
    "showSessionStats": {
        "type": "switch",
        "default": true,
        "description": "Show Session Stats in Tooltip"
    },
    "dailyLogRetention": {
        "type": "spinbutton",
        "default": 30,
        "min": 7,
        "max": 90,
        "step": 1,
        "description": "Daily Usage Log Retention (Days)"
    },
    "showPing": {
        "type": "switch",
        "default": true,
        "description": "Show Latency/Ping"
    },
    "pingAlways": {
        "type": "switch",
        "default": false,
        "description": "Continuous Ping (High Battery Usage)"
    },
    "pingServer": {
        "type": "entry",
        "default": "8.8.8.8",
        "description": "Ping Server Info"
    },
    "dataLimitType": {
        "type": "combobox",
        "default": "None",
        "options": {
            "None": "None",
            "Daily": "Daily Limit",
            "Monthly": "Monthly Limit"
        },
        "description": "Data Limit Type"
    },
    "dataLimitValue": {
        "type": "spinbutton",
        "default": 1024,
        "min": 1,
        "max": 100000,
        "step": 1,
        "description": "Limit Amount"
    },
    "dataLimitUnit": {
        "type": "combobox",
        "default": "MB",
        "options": {
            "MB": "MB",
            "GB": "GB"
        },
        "description": "Unit"
    },
    "alertPercentage": {
        "type": "scale",
        "default": 80,
        "min": 50,
        "max": 100,
        "step": 5,
        "description": "Alert Threshold (%)"
    },
    "reportIssue": {
        "type": "button",
        "description": "Report Issue on GitHub",
        "callback": "openIssueReport"
    },
    "saveSettings": {
        "type": "button",
        "description": "Save Settings & Reload",
        "callback": "onSaveSettings"
    }
}
