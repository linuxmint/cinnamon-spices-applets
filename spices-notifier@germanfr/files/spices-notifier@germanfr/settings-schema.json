{
  "username": {
    "type": "entry",
    "description": "GitHub user name",
    "default": ""
  },

  "update-interval": {
    "type": "spinbutton",
    "description": "Update interval",
    "units": "minutes",
    "default": 240,
    "min": 15,
    "max": 2880,
    "step": 5
  },

  "show-nonzero-only": {
    "type": "switch",
    "description": "Hide panel icon when there are no unread comments",
    "default": false
  },

  "uuidList": {
    "type": "generic",
    "default": ""
  },

  "uuids": {
    "type": "list",
    "columns": [
      {
        "id": "uuid",
        "title": "UUID",
        "type": "string",
        "default": ""
      }
    ],
    "description": "Additional uuid:s",
    "tooltip": "Additional uuid:s for applets, desklets, extensions and themes you want to follow (separated by semi-colon).",
    "default": []
  },

  "xlets-cache": {
    "type": "generic",
    "default": { "applets": {}, "desklets": {}, "extensions": {}, "themes": {}, "timestamp": 0 }
  },

  "comment-cache": {
    "type": "generic",
    "default": { "timestamp": 0 }
  }
}
