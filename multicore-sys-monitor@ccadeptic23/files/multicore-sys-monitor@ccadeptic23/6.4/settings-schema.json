  "labelsOn": {
    "type": "switch",
    "default": true,
    "description": "Labels"
  },
  "thickness": {
    "type": "scale",
    "default": 1,
    "description": "Curves thickness",
    "min": 1,
    "max": 5,
    "step": 1,
    "show-value": true
  },
  "useIconSize": {
    "type": "switch",
    "default": false,
    "description": "Limit height to the size of a colored icon"
  },
  "refreshRate": {
    "type": "scale",
    "default": 1000,
    "description": "Refresh Rate (ms)",
    "min": 500,
    "max": 3000,
    "step": 50,
    "show-value": true
  },
  "labelColor": {
    "type": "colorchooser",
    "default": "rgba(238, 238, 236, 1)",
    "description": "Label Color"
  },
  "backgroundColor": {
    "type": "colorchooser",
    "default": "rgba(48, 48, 48, 0.1)",
    "description": "Background Color"
  },
  "CPU_enabled": {
    "type": "switch",
    "default": true,
    "description": "Enable"
  },
  "CPU_labelOn": {
    "type": "switch",
    "default": true,
    "description": "Label",
    "dependency": "labelsOn"
  },
  "CPU_squared": {
    "type": "switch",
    "default": false,
    "description": "Square view"
  },
  "CPU_width": {
    "type": "scale",
    "default": 64,
    "description": "Width",
    "min": 16,
    "max": 320,
    "step": 16,
    "show-value": true,
    "dependency": "!CPU_squared"
  },
  "CPU_mergeAll": {
    "type": "switch",
    "default": false,
    "description": "Merge all"
  },
  "CPU_byActivity": {
    "type": "switch",
    "default": false,
    "description": "Color by activity level"
  },
  "CPU_useProgressiveColors": {
    "type": "switch",
    "dependency": "CPU_byActivity",
    "default": false,
    "description": "Use automatic colors"
  },
  "CPU_colorExplanation": {
    "type": "label",
    "description": "The CPUs are colored in groups of four: CPU0, CPU1, CPU2, and CPU3.\nThe fifth, named CPU4, will have the same color as CPU0; the sixth, CPU5, will have the same color as CPU1, and so on."
  },
