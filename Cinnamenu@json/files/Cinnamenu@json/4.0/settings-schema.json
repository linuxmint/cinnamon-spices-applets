    },
    "menu-icon-size-custom":{
        "type":"checkbox",
        "default":false,
        "description":"Use a custom icon size",
        "tooltip":"Use a custom size for the panel icon"
    },
    "menu-icon-size":{
        "type":"spinbutton",
        "default":24,
        "min":0,
        "max":60,
        "step":1,
        "units":"",
        "description":"Panel icon size (pixels)",
        "dependency":"menu-icon-size-custom",
        "tooltip":"Choose a custom size for the panel icon"
    },
    "menu-label":{
        "type":"entry",
        "default":"Menu",
        "description":"Panel text",
        "tooltip":"Text to show beside the panel icon"
    },

    "category-icon-size":{
        "type":"spinbutton",
        "default":24,
        "min":0,
        "max":256,
        "step":1,
        "units":"",
        "description":"Category icon size (pixels)",
        "tooltip":"Category icon size (pixels)"
    },
    "apps-list-icon-size":{
        "type":"spinbutton",
        "default":24,
        "min":0,
        "max":256,
        "step":1,
        "units":"",
        "description":"Applications list icon size (pixels)",
        "tooltip":"Applications list icon size (pixels)"
    },
    "apps-grid-icon-size":{
        "type":"spinbutton",
        "default":64,
        "min":0,
        "max":256,
        "step":1,
        "units":"",
        "description":"Applications grid icon size (pixels)",
        "tooltip":"Applications grid icon size (pixels)"
    },
    "sidebar-icon-size":{
        "type":"spinbutton",
        "default":32,
        "min":6,
        "max":64,
        "step":1,
        "units":"",
        "description":"Sidebar icon size (pixels)",
        "tooltip":"Sidebar icon size (pixels)"
    },
    "use-box-style":{
        "type":"checkbox",
        "default":false,
        "description":"Use sidebar box style",
        "tooltip":"Use a sidebar box style"
    },
    "use-tile-style":{
        "type":"checkbox",
        "default":false,
        "description":"Use tile style",
        "tooltip":"Use a tile style for the application buttons (Note: may not work on some themes)"
    }
}
