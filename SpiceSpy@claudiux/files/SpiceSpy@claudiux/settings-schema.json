{
  "section1": {
    "type": "section",
    "description": "Options"
  },
  "update-interval": {
    "type": "spinbutton",
    "description": "Update interval",
    "units": "minutes",
    "default": 240,
    "min": 15,
    "max": 2880,
    "step": 5
  },
  "standard-opacity": {
    "type": "spinbutton",
    "description": "Opacity in absence of change",
    "default": 192,
    "min": 64,
    "max": 240,
    "step": 16
  },
  "color-on-change": {
    "type": "colorchooser",
    "description": "Color on change",
    "default": "#e4e4e4"
  },
  "show-icon-in-menu": {
    "type": "switch",
    "description": "Show each Spice icon in the menu",
    "default": false,
    "tooltip": "This can affect menu display speed."
  },
  "icon-size": {
    "type": "spinbutton",
    "dependency": "show-icon-in-menu",
    "description": "Icon size",
    "units": "pixels",
    "default": 24,
    "min": 16,
    "max": 64,
    "step": 2
  },
  "sort-by": {
    "type": "combobox",
    "description": "Sort by",
    "default": "translated",
    "options": {
      "Translated name": "translated",
      "Original name": "untranslated",
      "UUID": "uuid",
      "Score (bottom-up)": "score",
      "Score (top-down)": "dscore",
      "Number of comments (bottom-up)": "comments",
      "Number of comments (top-down)": "dcomments"
    }
  },
  "show-uuid": {
    "type": "switch",
    "description": "Show UUID instead of name",
    "default": false
  },
  "translate-name": {
    "type": "switch",
    "dependency": "!show-uuid",
    "description": "Show translated name if available",
    "default": true
  },
  "display-on-panel": {
    "type": "combobox",
    "description": "If there is nothing new",
    "default": "normal",
    "options": {
      "Show icon and label": "normal",
      "Show icon only": "icon",
      "Do not show anything": "mask"
    }
  },
  "section2": {
    "type": "section",
    "description": "List of authors of the Spices you are interested in"
  },
  "author-list": {
    "type": "list",
    "columns": [
      {
        "id": "author",
        "title": "GitHub user name",
        "type": "string",
        "default": ""
      }
    ],
    "default": [

    ]
  },
  "section3": {
    "type": "section",
    "description": "List of specific Spices you are interested in"
  },
  "uuid-list": {
    "type": "list",
    "columns": [
      {
        "id": "uuid",
        "title": "UUID",
        "type": "string",
        "default": ""
      }
    ],
    "default": [

    ]
  },
  "spices_to_spy": {
    "type": "generic",
    "default": {}
  },
  "old_spices_to_spy": {
    "type": "generic",
    "default": {}
  }
}
