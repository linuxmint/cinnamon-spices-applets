{
    "layout2": {
        "type": "layout",
        "pages": ["general-page", "modules-page"],
        "general-page": {
            "type": "page",
            "title": "General",
            "sections": [
                "contextmenu-section",
                "panel-section",
                "appearance-section"
            ]
        },
        "modules-page": {
            "type": "page",
            "title": "Modules",
            "sections": [
                
            ]
        },
        "contextmenu-section": {
            "type": "section",
            "title": "Context Menu",
            "keys": [
                "showownid",
                "showkdecver"
            ]
        },
        "panel-section": {
            "type": "section",
            "title": "Panel",
            "keys": [
                "shownumdevices",
                "tooltipmode"
            ]
        },
        "appearance-section": {
            "type": "section",
            "title": "Appearance",
            "keys": [
                "icontype",
                "usecustomicon",
                "customicon",
                "expandfirst"
            ]
        }
    },
    "showownid": {
        "type": "switch",
        "description": "Show ID of this device in the context menu",
        "default": true
    },
    "showkdecver": {
        "type": "switch",
        "description": "Show the KDE Connect version in the context menu",
        "default": true
    },
    "shownumdevices": {
        "type": "switch",
        "description": "Show the number of connected devices next to the icon",
        "default": true
    },
    "icontype": {
        "type": "combobox",
        "description": "Icon type",
        "options": {
            "Symbolic": "SYMBOLIC",
            "Color": "COLOR"
        },
        "default": "COLOR"
    },
    "usecustomicon": {
        "type": "switch",
        "description": "Use custom icon",
        "default": false
    },
    "customicon": {
        "type": "iconfilechooser",
        "description": "Custom icon to use",
        "default": "kdeconnect",
        "dependency": "usecustomicon"
    },
    "tooltipmode": {
        "type": "combobox",
        "description": "What should the tooltip of the applet show?",
        "options": {
            "Device Count": "DEVICECOUNT",
            "Applet Name": "APPLETNAME"
        },
        "default": "DEVICECOUNT"
    },
    "expandfirst": {
        "type": "switch",
        "description": "Expand the device submenu if there is only 1 device",
        "default": true
    }
}