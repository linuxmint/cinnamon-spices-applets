{
    "appearanceHeader": {
        "type": "header",
        "description": "Appearance"
    },

    "height": {
        "type": "scale",
        "description": "Default height",
        "min": 75,
        "max": 500,
        "step": 25,
        "default": 200
    },

    "width": {
        "type": "scale",
        "description": "Default width",
        "min": 125,
        "max": 500,
        "step": 25,
        "default": 200
    },

    "theme": {
        "type": "combobox",
        "description": "Default theme",
        "default": "green",
        "options": {
            "Green": "green",
            "Aqua": "aqua",
            "Blue": "blue",
            "Brown": "brown",
            "Orange": "orange",
            "Pink": "pink",
            "Purple": "purple",
            "Red": "red",
            "Sand": "sand",
            "Teal": "teal",
            "Yellow": "yellow",
            "Random": "random"
        }
    },

    "boxShadow": {
        "type": "checkbox",
        "description": "Show shadow behind notes",
        "default": false,
        "tooltip": "Warning: this has been known to slow down some computers - not recommended on older hardware"
    },

    "behaviorHeader": {
        "type": "header",
        "description": "Behavior"
    },

    "startState": {
        "type": "combobox",
        "description": "When Cinnamon starts",
        "default": 0,
        "options": {
            "Show notes on Desktop": 0,
            "Show notes above windows": 1,
            "Hide notes": 2,
            "Restore previous state": 3
        }
    },

    "storedNotes": {
        "type": "generic",
        "default": []
    },

    "raisedState": {
        "type": "generic",
        "default": false
    },

    "hideState": {
        "type": "generic",
        "default": false
    }
}
