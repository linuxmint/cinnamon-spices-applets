	"hot_temp": {
		"type": "spinbutton",
		"default": 70,
		"min": 0,
		"max": 200,
		"step": 1,
		"description": "CPU hot temperature (°C)",
		"tooltip": "CPUs' temperature above which they are regarded as hot (for color representation in the panel)"
