	"color_hot": {
		"type": "colorchooser",
		"default": "#FF0000",
		"description": "Color for CPU hot temperature"
	},
    "sensors_cmd": {
        "type" : "entry",
        "default" : "/usr/bin/sensors",
        "description" : "Command to start 'sensors'",
		"tooltip": "Command to start 'sensors'. Use 'which sensors' command to find it. Install 'lmsensors' package, if not found"
    },
    "net_label": {
        "type": "header",
        "description": "Network section"
    },
	"net_size": {
		"type": "spinbutton",
		"default": 40,
		"min": 0,
		"max": 1000,
		"step": 1,
		"description": "Network panel section width (px)",
		"tooltip": "Network panel section width"
	},
    "net_style": {
        "type" : "entry",
        "default" : "text-align: left; margin-left: 5px; font-size: 8pt;",
        "description" : "Network panel section style",
		"tooltip": "Network panel section HTML style (e.g.: text-align: left; margin-left: 5px; font-size: 8pt;)"
