{
    "common_label": {
        "type": "header",
        "description": "Common"
    },
	"refresh": {
		"type": "spinbutton",
		"default": 2,
		"min": 1,
		"max": 5,
		"step": 1,
		"description": "Sections info refresh rate (seconds)",
		"tooltip": "CPUs, memory, network info refresh rate"
	},
    "cpu_label": {
        "type": "header",
        "description": "CPUs and memory sections"
    },
	"size": {
		"type": "spinbutton",
		"default": 40,
		"min": 0,
		"max": 1000,
		"step": 1,
		"description": "CPUs and memory panel sections widths (px)",
		"tooltip": "CPUs and memory panel sections widths"
	},
	"temp_refresh": {
		"type": "spinbutton",
		"default": 5,
		"min": 2,
		"max": 10,
		"step": 1,
		"description": "CPUs temperature refresh rate (seconds)",
		"tooltip": "CPUs temperature refresh rate"
	},
	"cold_temp": {
		"type": "spinbutton",
		"default": 45,
		"min": 0,
		"max": 100,
		"step": 1,
