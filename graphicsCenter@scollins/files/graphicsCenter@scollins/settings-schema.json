{
    "general": {
        "type": "header",
        "description": "General Settings"
    },
    
    "panelIcon": {
        "type": "iconfilechooser",
        "description": "Panel icon",
        "default": "applications-graphics",
        "tooltip": "Accepts icon name or direct path (supports symbolic icons)"
    },
    
    "panelText": {
        "type": "entry",
        "description": "Panel text",
        "default": ""
    },
    
    "keyOpen": {
        "type": "keybinding",
        "description": "Menu shorcut key",
        "default": "<Super>g"
    },
    
    "iconSize": {
        "type": "spinbutton",
        "default": 20,
        "min": 10,
        "max": 50,
        "units": "px",
        "step": 2,
        "description": "Menu icon size"
    },
    
    "pictures": {
        "type": "header",
        "description": "Pictures"
    },
    
    "showPictures": {
        "type": "checkbox",
        "description": "Show contents of pictures directory",
        "default": true
    },
    
    "recursePictures": {
        "type": "checkbox",
        "description": "Show contents of subfolders",
        "default": false,
        "indent": true,
        "dependency": "showPictures"
    },
    
    "altDir": {
        "type": "filechooser",
        "description": "Use alternate directory",
        "default": "",
        "select-dir": true,
        "indent": true,
        "dependency": "showPictures"
    },
    
    "pictureSize": {
        "type": "scale",
        "description": "Thumbnail size",
        "min": 50,
        "max": 300,
        "step": 50,
        "default": 100,
        "indent": true,
        "dependency": "showPictures"
    },
    
    "recent": {
        "type": "header",
        "description": "Recent Documents"
    },
    
    "showRecentDocuments": {
        "type": "checkbox",
        "description": "Show recent documents",
        "default": false
    },
    
    "recentSizeLimit": {
        "type": "spinbutton",
        "default": 10,
        "min": 0,
        "max": 30,
        "units": "",
        "step": 1,
        "description": "Number to show",
        "indent": true,
        "dependency": "showRecentDocuments"
    }
}